<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_spinandwin"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/homecard_layout"
                android:padding="3dp"
                >

                <TextView
                    android:id="@+id/sw_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎁Click and Spin👉"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sw_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here to spin and Win"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/sw_tv1"
                    app:layout_constraintStart_toStartOf="@+id/sw_tv1"
                    app:layout_constraintTop_toBottomOf="@+id/sw_tv1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/roulette"
                    app:layout_constraintEnd_toEndOf="@id/card_spinandwin"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toTopOf="@id/card_spinandwin"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/card_spinandwin"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_scratchcard"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_spinandwin"
                android:background="@drawable/homecard_layout"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/blue"
                android:padding="3dp"
                >

                <TextView
                    android:id="@+id/sc_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💰Scratch Card 👉"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sc_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here to scratch"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/sc_tv1"
                    app:layout_constraintStart_toStartOf="@+id/sc_tv1"
                    app:layout_constraintTop_toBottomOf="@+id/sc_tv1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/scratchcard"
                    app:layout_constraintEnd_toEndOf="@id/card_scratchcard"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/card_scratchcard"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/card_scratchcard"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_quiz"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_scratchcard"
                android:background="@drawable/homecard_layout"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green"
                android:padding="3dp"
                >

                <TextView
                    android:id="@+id/q_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎗Quiz &amp; Ans👉"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/q_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here to Ans Quiz"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/q_tv1"
                    app:layout_constraintStart_toStartOf="@+id/q_tv1"
                    app:layout_constraintTop_toBottomOf="@+id/q_tv1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/quiz"
                    app:layout_constraintEnd_toEndOf="@id/card_quiz"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/card_quiz"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/card_quiz"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_biggestSpin"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_quiz"
                android:background="@drawable/homecard_layout"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/pink"
                android:padding="3dp"
                >

                <TextView
                    android:id="@+id/bs_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💰Biggest Spin👉"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bs_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here to biggest spin"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/bs_tv1"
                    app:layout_constraintStart_toStartOf="@+id/bs_tv1"
                    app:layout_constraintTop_toBottomOf="@+id/bs_tv1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/fortune_wheel"
                    app:layout_constraintEnd_toEndOf="@id/card_biggestSpin"
                    app:layout_constraintStart_toEndOf="@id/guideline5"
                    app:layout_constraintTop_toTopOf="@id/card_biggestSpin"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/card_biggestSpin"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>